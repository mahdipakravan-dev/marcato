<h2 class="title text-center mb-4"><%- title %></h2><!-- End .title text-center -->
<div class="owl-carousel owl-simple carousel-equal-height carousel-with-shadow" data-toggle="owl"
              data-owl-options='{
                  "nav": false, 
                  "dots": true,
                  "margin": 20,
                  "loop": false,
                  "rtl": true, 
                  "responsive": {
                      "0": {
                          "items":1
                      },
                      "480": {
                          "items":2
                      },
                      "768": {
                          "items":3
                      },
                      "992": {
                          "items":4
                      },
                      "1200": {
                          "items":4,
                          "nav": true,
                          "dots": false
                      }
                  }
              }'>
              <% sameProducts.forEach(sameProduct => { %>
                <div class="product product-7 text-center">
                    <figure class="product-media">
                        <a href="/product/<%- sameProduct._id %>">
                            <img src="<%- sameProduct.thumbnails[0] %>" alt="تصویر محصول"
                                class="product-image">
                        </a>
  
                        <div class="product-action">
                            <a href="/product/<%- sameProduct._id %>" class="btn-product btn-cart"><span>افزودن به سبد خرید</span></a>
                        </div><!-- End .product-action -->
                    </figure><!-- End .product-media -->
  
                    <div class="product-body">
                        <div class="product-cat text-center">
                            <a href="/products?cat=<%- sameProduct.instrument.enName %>"><%- sameProduct.instrument.faName %></a>
                        </div><!-- End .product-cat -->
                        <h3 class="product-title text-center"><a href="/product/<%- sameProduct._id %>"><%- sameProduct.fullName %></a></h3>
                        <!-- End .product-title -->
                        <div class="product-price">
                            <%- product.price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",") %> تومان
                        </div><!-- End .product-price -->
                    </div><!-- End .product-body -->
                </div><!-- End .product -->
              <% }) %>
              
          </div><!-- End .owl-carousel -->